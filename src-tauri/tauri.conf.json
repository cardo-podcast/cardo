{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Cardo",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": true
      },
      "http": {
        "all": true,
        "scope": [
          "https://*",
          "http://*"
        ]
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$APPCACHE/**",
          "$APPCONFIG/**",
          "$RESOURCE/**"
        ]
      },
      "os": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "Cardo",
        "width": 900,
        "height": 675,  
        "decorations": false,
        "transparent": true,
        "minWidth": 700,
        "minHeight": 500
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "cardo",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["../resources/**"]
    }
  }
}
